#!/bin/bash -u

#============================
# SUB ROUTINE
#============================
usage_exit()
{
  echo "Usage: $0" >&2
  exit 1
}

print_div()
{
  echo "--------------------------------------------------------------------------------"
}

print_fence() 
{
  print_div
  echo -e  "   $0 : $1 ($SECONDS sec)"
  print_div
}

prep_dir()
{
  for d in $@; do
    if [ ! -e $d ]; then
      echo "[$0] mkdir $d"
      mkdir -p $d
    fi
  done
}

#============================
# VARIABLES
#============================
SCRIPT_DIR=$(cd $(dirname ${BASH_SOURCE}); pwd)
RANDNAME=$(cat /dev/urandom | tr -dc [:alnum:] | head -c 15)

#============================
# MAIN ROUTINE
#============================
# 0. setup
if [ $# -ne 0 ]; then
  usage_exit
fi
